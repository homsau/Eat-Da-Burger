<div class="jumbotron-border">
  <div class="jumbotron main-jumbotron text-center">
    <img src="assets/img/eat-da-burger.png" width="600px">
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <img src="assets/img/burger-top.png" width="200px">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <h2>Burgers Available To Eat!</h2>
      <ul class="burger-list">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <!--{{this.id}}-->
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn-primary burger-button" type="submit">Eat!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-6">
      <h2>Burgers That Have Been Eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              <!--{{this.id}}-->
              {{this.burger_name}}

            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12" style="text-align: center;">
      <h2>Add a Burger</h2>
      <form action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Delicious Burger">
        <button type="submit" class="addBurgerButton">Add Burger</button>
      </form>
    </div>
  </div>
</div>
