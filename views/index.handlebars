<div class="jumbotron-border">
  <div class="jumbotron main-jumbotron text-center">
    <img src="assets/img/eat-da-burger.png" width="600px">
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <img src="assets/img/burger-top.png" width="200px">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <h2>Burgers Available To Eat!</h2>
      <ul class="burger-list">
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-4">
      <h2>&nbsp;</h2>
      <ul class="burger-list customer">
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <input type="text" name="customer" placeholder="Customer?" required>
                <button class="btn-primary burger-button" type="submit">Eat!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    
    <div class="col-lg-4">
      <h2>Already Eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}} (eaten by {{customer}})
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12" style="text-align: center;">
      <h2>Add a Burger</h2>
      <form action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Delicious Burger">
        <button type="submit" class="addBurgerButton">Add Burger</button>
      </form>
    </div>
  </div>
</div>
